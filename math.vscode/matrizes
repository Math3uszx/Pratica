#include <stdio.h>
#include <stdlib.h>

int main()
{
    char nomes[2][200];
    float notas [2][2];
    int i,j;
    int soma = 0;
    float media[3];
   
    for(i = 0;i < 3;i++){
     printf("Digite o nome da disciplina:");
     scanf("%s",&nomes[i]);
        
        
        
        for(j = 1;j<= 2;j++){
            printf("Digite a %dº nota:",j);
            scanf("%f",&notas[i][j]);
            
            soma += notas[i][j];
        }
        media[i] = soma / j;
        soma = 0;
    
        setbuf(stdin , 0);
    }
    
    
    //exibição
    for(i = 0;i < 3;i++){
     printf("\nNome da disciplina: %s \n",nomes[i] );
    
        for(j = 1;j<= 2;j++){
            printf("Digite a %dº Nota: %.1f \n",j,notas[i][j]);
            
        }
        printf("\n media: %.1f \n",media[i]);

    }
    
    
    return 0;
}
