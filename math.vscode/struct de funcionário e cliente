#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

    int main(){
      setlocale(LC_ALL,"portuguese");

     struct dados_usuario{
     struct dados_cliente{
        char nome[200];
        int idade;
        char Cpf[200];
     };    
     };

     struct dados_usuario usuario;
     struct dados_cliente cliente;
        int codigo;

        printf("1- Funcion치rio \n");
        printf("2- Cliente \n");
        printf("Resposta:");
        scanf("%i",&codigo);
        printf("\n");

        switch(codigo){
            case 1:

         fflush(stdin);
         printf("Nome: \n");
         gets(usuario.nome);

         printf("Idade: \n");
         scanf("%i",&usuario.idade);

         fflush(stdin);

         printf("CPF: \n");
         gets(usuario.Cpf);

         printf("Nome do Funcion치rio: %s\n",usuario.nome);
         printf("Idade do Funcion치rio: %i \n",usuario.idade);
         printf("CPF do Funcion치rio: %s \n",usuario.Cpf);
         break;
    
         case 2:
         fflush(stdin);
         printf("Nome: \n");
         gets(cliente.nome);

         printf("Idade: \n");
         scanf("%i",&cliente.idade);

         fflush(stdin);
         printf("CPF: \n");
         gets(cliente.Cpf);

         printf("Nome do cliente: %s\n",cliente.nome);
         printf("Idade do cliente: %i \n",cliente.idade);
         printf("CPF do cliente: %s \n",cliente.Cpf);
         break;
         }

         return 0;
    }
